<% content_for :bar do %>
  <li class="back">
  <%= link_to "< Decks", decks_path %>
  </li>
<% end %>

<section class="main">
  <h1><%= @deck.name %></h1>

    <%= link_to "Study", [:study, @deck], class: "study" %>

  <ul class="cards">
    <% @cards.each do |card| %>
      <li>
      <%= link_to card.front, card, class: "card" %>
      </li>
    <% end %>
  </ul>
</section>
