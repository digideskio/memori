<%= form_for :session, :url => session_path, :html => { :class => "sign-in"} do |form| %>
  <div class="text_field">
    <%= form.email_field :email, placeholder: "Your email",  :type => "email" %>
  </div>
  <div class="text_field">
    <%= form.password_field :password, placeholder: "Your password" %>
  </div>
  <div class="submit_field">
    <%= form.submit "Sign in" %>
  </div>
<% end %>
